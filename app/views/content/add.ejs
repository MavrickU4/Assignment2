<div class="container">
    <div class="row">
        <br>
        <h1> Create A New Contact</h1>
      <div class="offset-md-3 col-md-6 col-sm-12">
            

            <form class="form" method="POST">
                <input type="hidden" name="id" value="<%= contact._id %>" >
                <div class="form-group">
                    <label for="nameTextField">Contact Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the contacts name"
                    name="name" 
                    value="<%= contact.name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="emailTextField">Email</label>
                    <input type="text" class="form-control"
                    id="emailTextField"
                    placeholder="Enter their e-mail address"
                    name="email" 
                    value="<%= contact.email %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="phoneTextField">Phone</label>
                    <input type="text" class="form-control"
                    id="phoneTextField"
                    placeholder="Enter their phone number"
                    name="phone" 
                    value="<%= contact.phone %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="professionTextArea">Profession</label>
                    <input type="text" class="form-control"
                    id="professionTextArea"
                    placeholder="Enter their profession"
                    name="profession"                     
                    value="<%= contact.profession %>"
                    required>
                    </input>
                </div>

                <div class="form-group">
                    <label for="linkedinTextField">LinkedIn</label>
                    <input type="text" class="form-control"
                    id="linkedinTextField"
                    placeholder="Enter their LinkedIn link"
                    name="linkedin" 
                    value="<%= contact.linkedin %>"
                    not required>
                </div>
                    <br>
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/contact-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>
                    
            </form>
      
        </div>

    </div>
</div>